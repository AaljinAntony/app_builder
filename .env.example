# API Keys
GEMINI_API_KEY=your_gemini_api_key_here

# Configuration
LOG_LEVEL=INFO
MAX_LOOPS=50
MAX_ERRORS=3

# LLM Provider Settings
# Options: gemini, ollama
LLM_PROVIDER=gemini

# Gemini Settings
GEMINI_MODEL=gemini-2.5-flash

# Ollama Settings
OLLAMA_MODEL=codegemma:7b

# ========================================
# MCP Integration (Optional)
# ========================================
# Enable MCP servers for enhanced capabilities
ENABLE_MCP=false

# MCP Server Configurations
MCP_FILESYSTEM_ENABLED=true
MCP_GITHUB_ENABLED=false
MCP_GITHUB_TOKEN=your_github_token_here
MCP_POSTGRES_ENABLED=false
MCP_POSTGRES_CONNSTRING=postgresql://localhost/dbname
MCP_FETCH_ENABLED=false
MCP_PUPPETEER_ENABLED=false

